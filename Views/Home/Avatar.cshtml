
@{
    ViewData["Title"] = "Avatar";
}

<h1>Avatar</h1>
<img id="img1" class="img-thumbnail w-25" />


@section Scripts{
    <script>
        const img1 = document.querySelector('#img1');

        ( async () => {
            const url = '@Url.Content("~/api/avatar/2")';
            const response = await fetch(url);
            if (!response.ok) {
                console.log(`錯誤:${response.status}`);
                return;
            }
            const datas= await response.blob();
            img1.src = URL.createObjectURL(datas);
    
    
    })();

    </script>
}
